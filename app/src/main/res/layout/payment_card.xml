<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="95dp">


    <TextView
        android:id="@+id/paymentAmount"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/abeezee"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/examPic"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/paymentAmount"
        android:layout_marginStart="20dp"
        android:layout_marginTop="7dp"
        app:srcCompat="@drawable/ic_baseline_date_range_24"
        app:tint="#808080" />

    <TextView
        android:id="@+id/paymentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/paymentAmount"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/examPic"
        android:fontFamily="@font/abeezee"
        android:gravity="center"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/examPic2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/paymentDate"
        android:layout_marginStart="20dp"
        android:layout_marginTop="7dp"
        app:srcCompat="@drawable/ic_baseline_description_24"
        app:tint="#808080" />

    <TextView
        android:id="@+id/paymentReason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/paymentDate"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/examPic2"
        android:fontFamily="@font/abeezee"
        android:gravity="center"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/border2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/ic_launcher_background" />

    <ImageView
        android:id="@+id/paymentStatus"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/paymentAmount"
        android:layout_marginTop="-22dp"
        android:layout_toEndOf="@+id/paymentAmount" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="-78dp"
        android:layout_toStartOf="@+id/paymentAmount"
        android:text="Monto: " />


</RelativeLayout>